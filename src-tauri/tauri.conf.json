{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Syncplay",
  "version": "0.2.1",
  "identifier": "com.syncplay.tauri",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": ["main"]
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Syncplay",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "transparent": true,
        "backgroundColor": "#00000000",
        "titleBarStyle": "Overlay",
        "devtools": true,
        "hiddenTitle": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["resources/placeholder.png"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
